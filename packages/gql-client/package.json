{
    "name": "gql-client",
    "version": "1.0.0",
    "description": "A simple web client that issues GraphQL requests",
    "main": "index.js",
    "scripts": {
        "test": "jest --coverage",
        "build": "tsc -p .",
        "clean": "rimraf lib && rimraf coverage",
        "lint": "tslint -p tsconfig.json -c ../../tslint.json src/*.ts ",
        "lint-fix": "tslint -p tsconfig.json -c ../../tslint.json src/*.ts --fix",
        "prepublishOnly": "npm run clean && npm run build",
        "push": "cd ../../; npm run push"
    },
    "keywords": [
        "GraphQL"
    ],
    "author": "Leon Tao Long <tlong@instructure.com>",
    "license": "UNLICENSED",
    "dependencies": {
        "apollo-cache-inmemory": "^1.2.5",
        "apollo-client": "^2.3.5",
        "apollo-link-http": "^1.5.4"
    },
    "devDependencies": {
        "@types/jest": "^23.1.3",
        "cross-fetch": "^2.2.2",
        "graphql": "^0.13.2",
        "graphql-tag": "^2.9.2",
        "jest": "^23.2.0",
        "rimraf": "^2.6.2",
        "ts-jest": "^22.4.6",
        "tslint": "^5.10.0",
        "typescript": "^2.9.2"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ]
    }
}
