    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.rulers": [
        140
    ],
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "node_modules": true,
        "dist": true,
        "coverage": true,
        "npm": true
    }
}
